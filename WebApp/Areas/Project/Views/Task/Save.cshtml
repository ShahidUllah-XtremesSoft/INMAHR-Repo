                </li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content tabs card">

                <div class="tab-pane active" id="ProjectTaskSection" role="tabpanel">

                    <style>
                        .btn-secondary:active, .btn-secondary.active, .open > .btn-secondary.dropdown-toggle, .selectedColor {
                            color: #263238;
                            background-color: oldlace;
                            border-color: 1px black;
                        }
                    </style>

                    <form id="frmAddUpdate_Task" name="frmAddUpdate_Task" action="/services/Xtreme/multipart" method="post">


