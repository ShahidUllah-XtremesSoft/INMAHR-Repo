
@{
    ViewBag.Title = "HumanResource - Department";

}



<div class="pcoded-content">
    <!-- [ breadcrumb ] start -->
    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-12">
                    <div class="page-header-title">
                        @*<h5 class="m-b-10">Visa Sponsorship</h5>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- [ breadcrumb ] end -->
    <div class="pcoded-inner-content page-header">
        <!-- Main-body start -->
        <div class="main-body">
            <div class="page-wrapper">

                <!-- Page-body start -->
                <div class="page-body">
                    <div class="row">
                        <div class="col-sm-12">

                            <!-- card start -->
                            <div class="card">

                                <div class="card-block">
                                    <form id="frmsponsorshipDetail" name="frmsponsorshipDetail" action="/services/Xtreme/multipart" method="post">
                                        <!--type is required should be same as command name-->
                                        <input type="hidden" name="type" id="type" value="HR_VisaSponsorship_Save" />
                                        <input type="hidden" name="Id" id="Id" value="0" />
                                        <input type="hidden" name="CreateBy" id="CreatedBy" value="0" />
                                        <input type="hidden" name="Language" id="Language" value="" />

                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="col-form-label">@HRModuleUI.HumanResourceUI.lblNameEng  <span style="color:red">*</span></label>
                                                    <input class="form-control" id="NameEng" name="NameEng" placeholder="Enter SponsorShip " required />
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="col-form-label">@HRModuleUI.HumanResourceUI.lblNameArb  <span style="color:red">*</span></label>
                                                    <input class="form-control" id="NameArb" name="NameArb" placeholder="Enter SponsorShip " required />
                                                </div>
                                            </div>


                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <button type="button" id="btnSave" class="btn btn-success  pull-right"><i class="fa fa-save"></i> @Resources.Global.btnSave</button>
                                            </div>
                                        </div>
                                    </form>


                                    <div class="row">
                                        <div class="col-md-12">
                                            <div id="sponsorship-grid"></div>
                                        </div>
                                    </div>


                                </div>
                            </div>


                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/FunctionalityJs/Areas/HumanResource/SponsorShip/visasponsorship-save.js"></script>
    <script src="~/Scripts/FunctionalityJs/Areas/HumanResource/SponsorShip/visasponsorship-grid.js"></script>

    <script>
        //Grid columns
        var nameEng = '@HRModuleUI.HumanResourceUI.lblNameEng';
        var nameArb  = '@HRModuleUI.HumanResourceUI.lblNameArb';
        var action  = '@HRModuleUI.HumanResourceUI.lblAction';
    </script>
}

