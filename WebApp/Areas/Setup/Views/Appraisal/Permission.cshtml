
@{
    ViewBag.Title = HRModuleUI.HumanResourceUI.lblAppraisal;
}


<div class="card">
    <div class="card-block">
        <div class="row">

            <!-- Tab panes -->
            <div class="  card-block ">

                <div class=" " id="AppraisalAssociationTab" role="tabpanel">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="divSearchControls">
                                        <label class="col-form-label">@HRModuleUI.HumanResourceUI.lblDepartment</label>
                                        <input type="text" class="form-control" id="DepartmentId" name="DepartmentId" value="" />
                                        <input type="hidden" class="form-control" id="DepartmentIds" name="DepartmentIds" value="" />
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <div>
                                        <label class="col-form-label">@HRModuleUI.HumanResourceUI.lblSelect @HRModuleUI.HumanResourceUI.lblYear</label>
                                        <select class="form-control" id="Year" name="Year" tabindex="4" onchange="fnLoadAllEmployeesListAsPerDepartment()">

                                            <option selected value="2023">2023</option>
                                            <option value="2024">2024</option>
                                            <option value="2025">2025</option>
                                            <option value="2026">2026</option>
                                            <option value="2027">2027</option>
                                            <option value="2028">2028</option>
                                            <option value="2029">2029</option>
                                            <option value="2030">2030</option>
                                            <option value="2031">2031</option>
                                            <option value="2032">2032</option>
                                            <option value="2033">2033</option>
                                            <option value="2034">2034</option>
                                            <option value="2035">2035</option>

                                        </select>


                                    </div>
                                </div>

                                <div class="col-md-6" style="margin-top: 25px;">
                                    <div class="card-footer saveBTN" style="display:none;" >

                                        <button class="btn btn-success   @Resources.Common.PullRight" id="btn-save-appraisal-association" value="Save"><i class="fa fa-save"></i> @Resources.Global.btnSave</button>

                                    </div>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="form-group">
                                        <div class="grid-main-div">
                                            <div id="load-employees-by-role-and-department"></div>

                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>


                </div>

            </div>
        </div>
    </div>
</div>


