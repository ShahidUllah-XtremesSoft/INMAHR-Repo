
@{
    ViewBag.Title = "User Management - Module";

}


<div class="card">
    <div class="card-block">
        <div class="row">
            <div class="col-md-12">
                <a href="@Url.Action("Add","Employee")" class="btn btn-success pull-right" id="btnAddNewEmployee"><i class="fa fa-plus">  </i> @Resources.EmployeeResourcesUI.lblAddNew</a>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div id="employee-grid"></div>
            </div>
        </div>


    </div>
</div>



<div class="modal fade" id="modal-adduserlogin" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">@HRUI.HumanResourceUI.lblCreateUserLogin</h4>
            </div>
            <div class="modal-body">
                <form id="frmUserLoginDetail" name="frmUserLoginDetail" action="/services/Xtreme/multipart" method="post">
                    <input type="hidden" name="type" id="type" value="UserManagement_UserLogin" />
                    <input type="hidden" name="Id" id="Id" value="0" />
                    <input type="hidden" name="CreateBy" id="CreatedBy" value="0" />
                    <input type="hidden" name="Language" id="Language" value="" />
                    <input type="hidden" name="EmployeeId" id="EmployeeId" value="" />
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="col-form-label">@HRUI.HumanResourceUI.lblEmail</label><span style="color: red">*</span>
                                <input class="form-control" id="Email" name="Email" placeholder="Email " required readonly/>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="col-form-label">@UserManagement.UserManagementUI.phPassword</label><span style="color: red">*</span>
                                <input class="form-control" type="password" id="Password" name="Password" placeholder="" value="12345" required readonly />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="col-form-label">@HRUI.HumanResourceUI.lblRole</label><span style="color: red">*</span>
                                <select class="form-control" id="RoleId" name="RoleId" required></select>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group" id="divDepartmentDropdownList">
                                <label class="col-form-label">@HRUI.HumanResourceUI.lblDepartment</label><span style="color: red">*</span>
                                <input class="form-control" id="DepartmentId" name="DepartmentId" placeholder="Enter Profession Name " required />
                            </div>
                        </div>
                    </div>

                </form>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">@HRUI.HumanResourceUI.lblClose</button>
                <button type="button" class="btn btn-primary" id="btnsave">@HRUI.HumanResourceUI.btnSave</button>
            </div>
        </div>
    </div>
</div>


@section scripts {
    <script src="~/Scripts/FunctionalityJs/Areas/HumanResource/Employee/employee-grid.js"></script>


    <script>
        //Grid columns
        var login = '@HRUI.HumanResourceUI.lblLogin';
        var employeeNumber = '@HRUI.HumanResourceUI.lblEmpNum';
        var nameEng = '@HRUI.HumanResourceUI.lblNameEng';
        var nameArb = '@HRUI.HumanResourceUI.lblNameArb';
        var employeeName = '@HRUI.HumanResourceUI.lblEmployeeName';
        var department = '@HRUI.HumanResourceUI.lblDepartment';
        var phone = '@HRUI.HumanResourceUI.lblPhone';
        var email = '@HRUI.HumanResourceUI.lblEmail';        
        var joinDate = '@HRUI.HumanResourceUI.lblJoinDate';
        var profession = '@HRUI.HumanResourceUI.lblProfession';
        var PassportNumber = '@HRUI.HumanResourceUI.lblPassportNumber';
        var eidNumber = '@HRUI.HumanResourceUI.lblEIDNumber';
        var action  = '@HRUI.HumanResourceUI.lblAction';
        var btnGridCreateLogin  = '@HRUI.HumanResourceUI.btnGridCreateLogin';
        var btnGridAlreadyCreated  = '@HRUI.HumanResourceUI.btnGridAlreadyCreated';
        $(function () {
            if (JSON.parse(localStorage.getItem('User')).isHR == false) {
                $('#btnAddNewEmployee').css('display', 'none');
            }
        });
    </script>
    
}

