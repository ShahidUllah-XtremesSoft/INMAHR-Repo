                            <div class="col-md-12">
                                <div class="div-show-only-for-task-section-employee-available-area form-control selectedColor">
                                    <div class="row">
                                        <div class="col-sm-9">

                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <div class="form-group">
                                                        <label class="col-form-label">@ProjectUI.ProjectUI.lblTask @ProjectUI.ProjectUI.lblTitle</label><span style="color:red"> *</span><br />
                                                        <input type="text" class="form-control  " name="Title" id="Title" value="" required />
                                                    </div>
                                                </div>

                                            </div>
                                            <div class="row">
                                                <div class="col-sm-12">
                                                    <div class="form-group">
                                                        <label class="col-form-label">@ProjectUI.ProjectUI.lblTask @ProjectUI.ProjectUI.lblDetails</label><span style="color:red"> *</span><br />
                                                        <textarea type="text" class="form-control editor" name="Description" id="Body" value=""></textarea>
                                                    </div>
                                                </div>

                                            </div>
                                            <div class="row">
                                                <div class="col-sm-4">
