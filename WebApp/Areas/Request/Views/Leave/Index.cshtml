
@{
    ViewBag.Title = "Leave Request";
}
<style>
    /*.k-pivot-table*/
  
</style>
<div class="card">
    <div class="card-block">
        <form id="frmLeaveDetail" name="frmLeaveDetail" action="/services/Xtreme/multipart" method="post">
            <!--type is required should be same as command name-->
            <input type="hidden" name="type" id="type" value="Request_Leave_Save" />
            <input type="hidden" name="Id" id="Id" value="0" />
            <input type="hidden" name="CreatedBy" id="CreatedBy" value="0" />
            <input type="hidden" name="Language" id="Language" value="" />
            <input type="hidden" name="EditLeavDays" id="EditLeavDays" value="0" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="col-form-label">@RequestUI.RequestResourceUI.lblLeaveType</label>
                        <input class="form-control" id="LeaveTypeId" name="LeaveTypeId" required />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="col-form-label">@RequestUI.RequestResourceUI.lblAvailableBalance </label>
                        <input class="form-control" id="AvailableLeave" name="AvailableLeave" readonly />
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="col-form-label">@Resources.Global.lblStartDate </label>
                        <input class="form-control" id="StartDate" name="StartDate" required />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="col-form-label">@Resources.Global.lblEndDate</label>
                        <input class="form-control" id="EndDate" name="EndDate" required />
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="col-form-label">@RequestUI.RequestResourceUI.lblNumberOfDays</label>
                        <input class="form-control" id="TotalDays" name="TotalDays" value="0" readonly />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <button type="button" id="btnSave" class="btn btn-success pull-right"><i class="fa fa-save"></i> @Resources.Global.btnSave</button>
                </div>
            </div>

        </form>


        <div class="row">
            <div class="col-md-12">
                <div id="LeaveGrid"></div>
            </div>
        </div>


    </div>
</div>



@section scripts {

    <script src="~/Scripts/FunctionalityJs/Areas/Request/Leave/leave.js"></script>
    <script>
        //Grid columns
        var leaveType = '@RequestUI.RequestResourceUI.lblLeaveType';
        var availableBalance = '@RequestUI.RequestResourceUI.lblAvailableBalance';
        var numberOfDays = '@RequestUI.RequestResourceUI.lblNumberOfDays';
        var status = '@RequestUI.RequestResourceUI.lblStatus';
        var startDate = '@Resources.Global.lblStartDate';
        var endDate = '@Resources.Global.lblEndDate';
        var action = '@Resources.Global.lblAction';
        var comment = '@RequestUI.RequestResourceUI.lblComment';
        


    </script>

}



