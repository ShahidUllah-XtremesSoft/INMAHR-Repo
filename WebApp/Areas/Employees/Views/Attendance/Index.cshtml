
@{
    ViewBag.Title = "Attendance";
}

<div class="card">
    <div class="card-block">
        <input type="hidden" name="Language" id="Language" />
        <input type="hidden" name="CreatedBy" id="CreatedBy" />
        <div class="row">
            <div class="col-md-5" id="divSearchControls">
                <div class="form-group">
                    <label class="col-form-label">@Resources.EmployeeResourcesUI.lblDepartment</label>
                    <input type="text" class="form-control" id="DepartmentId" name="DepartmentId" value="" />
                    <input type="hidden" class="form-control" id="DepartmentIds" name="DepartmentIds" value="" />
                </div>

            </div>
            <div class="col-md-5">
                <div class="form-group">
                    <label class="col-form-label">@Resources.EmployeeResourcesUI.lblDate</label>
                    <input type="date" class="form-control" id="CheckinDate" name="CheckinDate" value="" />
                </div>

            </div>
            <div class="col-md-2">
                <div class="form-group">                    
                    <button type="button" class="btn btn-success" value="Search" style="margin-top:33px;" id="btnSearch"><i class="fa fa-search"></i> Search</button>
                </div>

            </div>
        </div>
        <div class="row">
            <div class="col-md-12">

                <div id="AttendanceGrid"></div>
            </div>
        </div>
    </div>
</div>
@section scripts {
    <script src="~/Scripts/FunctionalityJs/Areas/Employees/Attendance/attendance-index.js"></script>

    <script>
        //Grid columns
         var employeeName = '@Resources.EmployeeResourcesUI.lblEmployeeName';
         var department= '@Resources.EmployeeResourcesUI.lblDepartment';
         var checkinDate= '@Resources.EmployeeResourcesUI.lblCheckInDate';
         var checkinTime= '@Resources.EmployeeResourcesUI.lblCheckinTime';
         var checkoutTime= '@Resources.EmployeeResourcesUI.lblCheckoutTime';
         var status= '@Resources.EmployeeResourcesUI.lblStatus';
    </script>
}
