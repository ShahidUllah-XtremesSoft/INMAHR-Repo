        var action = '@Resources.Global.lblAction';
        var Status = '@HRModuleUI.HumanResourceUI.lblStatus';
        var Other = '@HRModuleUI.HumanResourceUI.lblOther';
        var startDate = '@HRModuleUI.HumanResourceUI.lblStartDate';
        var lblFristSelectRecordFromGrid = '@HRModuleUI.HumanResourceUI.lblFristSelectRecordFromGrid';

