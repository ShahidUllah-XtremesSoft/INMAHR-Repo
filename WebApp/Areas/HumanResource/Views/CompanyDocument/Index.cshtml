
@{
    ViewBag.Title = "Index";
}

<form id="frmCompanyDocument" name="frmCompanyDocument" action="/services/Xtreme/multipart" method="post">
    <div class="card">
        <div class="card-block">

            <!--type is required should be same as command name-->
            <input type="hidden" name="type" id="type" value="HR_CompanyDocument_Save" />
            <input type="hidden" name="Id" id="Id" value="0" />
            <input type="hidden" name="CreateBy" id="CreatedBy" value="0" />
            <input type="hidden" name="Language" id="Language" value="" />

            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="col-form-label">@HRUI.HumanResourceUI.lblPersonalDocument</label><span style="color:red">*</span><br />
                        <input type="file" class="form-control" name="CompanyDocument" id="CompanyDocument" onchange="validatePersonalDocument('CompanyDocument');"  required/>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="col-form-label">@HRUI.HumanResourceUI.lblNameEng  <span style="color:red">*</span></label>
                        <input class="form-control" id="NameEng" name="NameEng" required />
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="col-form-label">@HRUI.HumanResourceUI.lblNameArb  <span style="color:red">*</span></label>
                        <input class="form-control" id="NameArb" name="NameArb" required />
                    </div>
                </div>
                </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="col-form-label">@HRUI.HumanResourceUI.lblDescription  <span style="color:red">*</span></label>
                        <textarea class="form-control" id="DescriptionEng" name="DescriptionEng" required></textarea>

                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="col-form-label">@HRUI.HumanResourceUI.lblDescriptonArb  <span style="color:red">*</span></label>
                        <textarea class="form-control" id="DescriptionArb" name="DescriptionArb" required></textarea>

                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-form-label">@HRUI.HumanResourceUI.lblIssueDate</label> <span style="color:red">*</span> <br />
                        <input type="date" class="form-control" id="IssueDate" name="IssueDate" required />
                    </div>
                </div>


                <div class="col-sm-6">
                    <div class="form-group">
                        <label class="col-form-label">@HRUI.HumanResourceUI.lblExpiryDate</label> <span style="color:red">*</span> <br />
                        <input type="date" class="form-control" id="ExpiryDate" name="ExpiryDate" required />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <button type="button" id="btn-save-company-document" class="btn btn-success  pull-right"><i class="fa fa-save"></i> @Resources.Global.btnSave</button>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div id="company-document-grid"></div>
                </div>
            </div>


        </div>
    </div>
</form>

@section scripts {
    <script src="~/Scripts/FunctionalityJs/Areas/HumanResource/CompanyDocument/company-document-grid.js"></script>
    <script src="~/Scripts/FunctionalityJs/Areas/HumanResource/CompanyDocument/company-document-save.js"></script>
    <script>
        //Grid columns
        var NameEng = '@HRUI.HumanResourceUI.lblNameEng';
        var NameArb = '@HRUI.HumanResourceUI.lblNameArb';
        var DescriptionEng = '@HRUI.HumanResourceUI.lblDescription';
        var DescriptionArb = '@HRUI.HumanResourceUI.lblDescriptonArb';
        var IssueDate = '@HRUI.HumanResourceUI.lblIssueDate';
        var ExpiryDate = '@HRUI.HumanResourceUI.lblExpiryDate';
        var Action = '@HRUI.HumanResourceUI.lblAction';
     var attachment = '@Resources.EmployeeResourcesUI.lblAttachment';
    </script>
}