<div class="row">

</div>
<div class="card">
    <div class="card-block">
        <div class="row">
            <div class="col-sm-8">
                <div class="row">
                    <div class="col-md-5">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="row mgbt-xs-0">
                                    <label class="col-xs-5  ">@HRUI.HumanResourceUI.lblEmployeeNumber</label>
                                    <div class="col-xs-7 controls pull-right" id="EmployeeNumber"></div>
                                    <!-- col-sm-10 -->
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="row mgbt-xs-0">
                                    <label class="col-xs-5  ">@HRUI.HumanResourceUI.lblEmployeeName</label>
                                    <div class="col-xs-7 controls pull-right" id="EmployeeName"></div>
                                    <!-- col-sm-10 -->
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="row mgbt-xs-0">
                                    <label class="col-xs-5   ">@HRUI.HumanResourceUI.lblJoinDate</label>
                                    <div class="col-xs-7 controls pull-right" id="JoinDate"></div>
                                    <!-- col-sm-10 -->
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="row mgbt-xs-0">
                                    <label class="col-xs-5  ">@HRUI.HumanResourceUI.lblPhone</label>
                                    <div class="col-xs-7 controls pull-right" id="PhoneNumber"></div>
                                    <!-- col-sm-10 -->
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="row mgbt-xs-0">
                                    <label class="col-xs-5  ">@HRUI.HumanResourceUI.lblEmail</label>
                                    <div class="col-xs-7 controls pull-right" id="Email"></div>
                                    <!-- col-sm-10 -->
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="row mgbt-xs-0">
                                    <label class="col-xs-5  ">
                                        @HRUI.HumanResourceUI.lblDepartment
                                    </label>
                                    <div class="col-xs-7 controls pull-right" id="Department">

                                    </div>
                                    <!-- col-sm-10 -->
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="row mgbt-xs-0">
                                    <label class="col-xs-5  ">
                                        @HRUI.HumanResourceUI.lblLineManager
                                    </label>
                                    <div class="col-xs-7 controls pull-right" id="DirectResponsible">

                                    </div>
                                    <!-- col-sm-10 -->
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-2"></div>

                    <div class="col-md-5">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="row mgbt-xs-0">
                                    <label class="col-xs-5  "> @HRUI.HumanResourceUI.lblOccupation</label>
                                    <div class="col-xs-7 controls pull-right" id="Profession">

                                    </div>
                                    <!-- col-sm-10 -->
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="row mgbt-xs-0">
                                    <label class="col-xs-5  ">@HRUI.HumanResourceUI.lblEmploymentStatus</label>
                                    <div class="col-xs-7 controls pull-right" id="ContractType">

                                    </div>
                                    <!-- col-sm-10 -->
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-12">
                                <div class="row mgbt-xs-0">
                                    <label class="col-xs-5  ">@HRUI.HumanResourceUI.lblNationality</label>
                                    <div class="col-xs-7 controls pull-right" id="Nationality">

                                    </div>
                                    <!-- col-sm-10 -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-sm-3 text-right">
                <img src="~/Content/Images/user.jpg" class="img-avatar" id="ProfileImage" name="ProfileImage" style="border-radius:50%;width:110px;" alt="Employee Profile Image" />
            </div>
        </div>


    </div>

</div>
<div class="row">

    <div class="col-md-6" id="divPersonalDocument">
        <div class="card">
            <div class="card-header">
                <strong>@HRUI.HumanResourceUI.tabPersonalDocument</strong>
                @*<small>Form</small>*@
            </div>
            <div class="card-block">
                <div class="row">
                    <div class="col-md-12">
                        @{
                            Html.RenderPartial("~/Areas/HumanResource/Views/Shared/PartialViews/_EmployeePersonalDocumentGridPartialView.cshtml");
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6" id="divLeaveBalance" style="display:none;">

        @{
            Html.RenderPartial("~/Areas/HumanResource/Views/Shared/PartialViews/_EmpoyeeLeaveBalancePartialViews.cshtml");            
        }


        <div class="card" hidden="hidden">
            <div class="card-header">
                <strong>@HRUI.HumanResourceUI.tabEducationalDocument</strong>
                @*<small>Form</small>*@
            </div>
            <div class="card-block">
                <div class="row">
                    <div class="col-md-12">
                        @{
                            Html.RenderPartial("~/Areas/HumanResource/Views/Shared/PartialViews/_EmployeeEducationalDocumentGridPartialView.cshtml");
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="card">
    <div class="card-header">
        <h5>@Resources.EmployeeResourcesUI.lblRequest</h5>
        <div class="card-header-right">

        </div>
    </div>

    <div class="card-block">
        <div class="row form-group">
            <div class="col-md-12">

                <div class="btn-group" role="group" aria-label="Requests">
                    <button type="button" class="btn btn-sm btn-primary" id="btnLeaveRequestTab">@HRUI.HumanResourceUI.lblLeave </button>
                    <button type="button" class="btn btn-sm btn-dark" id="btnShortLeaveRequestTab">@HRUI.HumanResourceUI.lblShortLeave</button>
                    <button type="button" class="btn btn-sm btn-dark" id="btnLetterRequestTab">@HRUI.HumanResourceUI.lblOfficialLetter</button>
                    <button type="button" class="btn btn-sm btn-dark" id="btnLeaveCancelRequestTab">@HRUI.HumanResourceUI.lblLeaveCancellation</button>
                    <button type="button" class="btn btn-sm btn-dark" id="btnCashInLeaveTab">@HRUI.HumanResourceUI.lblCashInLieu</button>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div id="RequestGrid"></div>
                @*<div id="LeaveRequestGrid"></div>*@
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="ModalDenyRequest" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Request Deny Comment</h4>
            </div>
            <div class="modal-body">
                @*<form id="frmUserLoginDetail" name="frmUserLoginDetail" action="/services/Xtreme/multipart" method="post">*@
                @*<input type="hidden" name="type" id="type" value="UserManagement_UserLogin" />
                    <input type="hidden" name="Id" id="Id" value="0" />
                    <input type="hidden" name="CreateBy" id="CreatedBy" value="0" />
                    <input type="hidden" name="Language" id="Language" value="" />
                    <input type="hidden" name="EmployeeId" id="EmployeeId" value="" />*@
                <input type="hidden" id="ModalDenyRequestType" />
                <input type="hidden" id="ModalDenyRequestId" />
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="col-form-label">Comment</label><span style="color: red">*</span>
                            <textarea class="form-control" id="RequestDenyComment" rows="5" name="RequestDenyComment" placeholder="Comment " required></textarea>
                        </div>
                    </div>


                </div>

                @*</form>*@

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="btnModalDenyRequestSave"><i class="fa fa-save"></i> Save</button>
            </div>
        </div>
    </div>
</div>
