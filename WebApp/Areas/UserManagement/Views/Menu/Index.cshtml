
@{
    ViewBag.Title = "User Management - Menu";
}


<div class="card">
    <div class="card-block">
        <form id="frmMenuDetail" name="frmMenuDetail" action="/services/Xtreme/multipart" method="post">
            <!--type is required should be same as command name-->
            <input type="hidden" name="type" id="type" value="UserManagement_Menu_Save" />
            <input type="hidden" name="Id" id="Id" value="0" />
            <input type="hidden" name="CreatedBy" id="CreatedBy" value="0" />
            <input type="hidden" name="Language" id="Language" value="" />

            @*<input type="hidden" name="ModuleId" id="ModuleId" value="0" />*@
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="col-form-label">Module</label>
                        <input class="form-control" id="ModuleId" name="ModuleId" required />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="col-form-label">Menu Group</label>
                        <input class="form-control" id="MenuGroup" name="MenuGroup" />
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="col-form-label">Menu Name (Eng)</label>
                        <input class="form-control" id="NameEng" name="NameEng" required />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="col-form-label">Menu Name (Arb)</label>
                        <input class="form-control" id="NameArb" name="NameArb" required />
                    </div>
                </div>

            </div>
            @*<div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="col-form-label">Controller</label>
                            <input class="form-control" id="Controller" name="Controller" />
                        </div>
                    </div>
                    <div class="col-md-6">

                        <div class="form-group">
                            <label class="col-form-label">Action</label>
                            <input class="form-control" id="Action" name="Action" />
                        </div>
                    </div>
                </div>*@
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="col-form-label">Url</label>
                        <input class="form-control" id="Url" name="Url" required />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @*<label class="col-form-label">fa Icon</label>
                            <input type="checkbox" class="form-control" id="Icon" name="Icon" />*@
                        <label for="IsHRMenu"> Is HR Menu</label><br>
                        <input type="checkbox" id="IsHRMenu" name="IsHRMenu" value="on" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="col-form-label">fa Icon</label>
                        <input class="form-control" id="Icon" name="Icon" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <button type="button" id="btnSave" class="btn btn-success  pull-right"><i class="fa fa-save"></i> Save</button>
                </div>
            </div>

        </form>


        <div class="row">
            <div class="col-md-12">
                <div id="menu-grid"></div>
            </div>
        </div>


    </div>
</div>


@section scripts {
    <script src="~/Scripts/FunctionalityJs/Areas/UserManagement/Menu/menu-grid.js"></script>
    <script src="~/Scripts/FunctionalityJs/Areas/UserManagement/Menu/menu-save.js"></script>

}
