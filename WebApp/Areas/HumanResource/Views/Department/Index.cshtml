
@{
    ViewBag.Title = "HumanResource - Department";

}



<form id="frmDepartmentDetail" name="frmDepartmentDetail" action="/services/Xtreme/multipart" method="post">
    <div class="card">
        <div class="card-block">
            <!--type is required should be same as command name-->
            <input type="hidden" name="type" id="type" value="HR_Department_Save" />
            <input type="hidden" name="Id" id="Id" value="0" />
            <input type="hidden" name="CreateBy" id="CreatedBy" value="0" />
            <input type="hidden" name="Language" id="Language" value="" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="col-form-label">@HRUI.HumanResourceUI.lblParentDepartment  <span style="color:red">*</span></label>
                        <input class="form-control" id="DepartmentId" name="DepartmentId" required />
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="col-form-label">@HRUI.HumanResourceUI.lblNameEng  <span style="color:red">*</span></label>
                        <input class="form-control" id="NameEng" name="NameEng" placeholder="Enter Department Name " required />
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label class="col-form-label">@HRUI.HumanResourceUI.lblNameArb  <span style="color:red">*</span></label>
                        <input class="form-control" id="NameArb" name="NameArb" placeholder="Enter Department Name " required />
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-md-12">
                    <button type="button" id="btnSave" class="btn btn-success  pull-right"><i class="fa fa-save"></i> @Resources.Global.btnSave</button>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div id="department-grid">

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>




@section scripts {
    <script src="~/Scripts/FunctionalityJs/Areas/HumanResource/Department/department-save.js"></script>
    <script src="~/Scripts/FunctionalityJs/Areas/HumanResource/Department/department-grid.js"></script>
    <script>
        //Grid columns
        var parentDepartment = '@HRUI.HumanResourceUI.lblParentDepartment';
        var departmentNameEng = '@HRUI.HumanResourceUI.lblNameEng';
        var departmentNameArb = '@HRUI.HumanResourceUI.lblNameArb';
        var parentDepartmentNameEng = '@HRUI.HumanResourceUI.lblParentDepartmentEng';
        var parentDepartmentNameArb = '@HRUI.HumanResourceUI.lblParentDepartmentArb';
        var action = '@HRUI.HumanResourceUI.lblAction';
    </script>

}

