

@{
    ViewBag.Title = HRModuleUI.HumanResourceUI.lblAppraisal + " " + HRModuleUI.HumanResourceUI.lblRequest;

}

<div class="card">


    <input type="hidden" id="CreatedBy" name="CreatedBy" />
    <input type="hidden" id="Id" name="Id" value="0" />
    <input type="hidden" id="LoggedInUserId" name="LoggedInUserId" value="0" />
    <input type="hidden" id="Language" name="Language" value="" />

    <div class="card">
        <div class="card-header">


            <h5>@HRModuleUI.HumanResourceUI.lblAppraisal</h5>
            <div class="card-header-right">

            </div>
        </div>
        <div class="card-block">
            <div class="row">
                <div class="col-md-12">
                    <button type="button" id="btnPendingData" onclick="fnLoadRequestAppraisal(this.value);" class="btn btn-outline-danger  pull-left active" value="Pending"><i class=""></i> @HRModuleUI.HumanResourceUI.lblPendingRequest</button>
                    <button id="btnApprovedData" onclick="fnLoadRequestAppraisal(this.value);" class="btn btn-outline-info pull-left" value="Approved"><i class=""></i> @HRModuleUI.HumanResourceUI.lblApprovedRequest</button>
                    <div id="btnAreaShowHideOnConditionBase" style="display:none;">

                        <button id="btnCancel" class="btn btn-danger pull-right" value="Decline"><i class="fa fa-ban"></i> @HRModuleUI.HumanResourceUI.lblDecline</button>
                        <button type="button" id="btnSave" class="btn btn-success  pull-right" value="Approved"><i class="fa fa-check"></i> @HRModuleUI.HumanResourceUI.lblApprove</button>


                    </div>
                </div>

            </div>

            <div class="grid-main-div">
                <div class="row">
                    <div class="col-md-12">
                        <div id="RequestAppraisal"></div>
                        <div id="RequestAppraisal_Approved"></div>
                    </div>
                </div>
            </div>


        </div>
    </div>


</div>



