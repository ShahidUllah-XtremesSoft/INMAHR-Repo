<style>

    .login-half-bg {
        background-size: cover;
        background-position: center;
        background-image: url('../../Content/Images/appointment-1.jpg');
    }

    .loginformSize {
        font-size: 50px;
    }
</style>

<body>

    <div class="row">

        <div class="col-sm-6 login-bg">
            <div class="auth-wrapper d-flex  justify-content-center align-items-center">
                <div class="auth-box    border-secondary">

                    <div id="loginform">
                        <div class="text-center p-t-20 p-b-20">
                            <span class="db"><img src="~/theme/assets/images/logo.png" alt="logo" /></span>
                        </div><br /><br />
                        <!-- Form -->
                        <form class="form-horizontal m-t-20" id="loginform" action="index.html">
                            <div class="row p-b-30">
                                <div class="col-12">
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text bg-warning text-white" id="basic-addon1"><i class="ti-user"></i></span>
                                        </div>
                                        <input type="text" id="username" class="form-control form-control-lg" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1" required="">
                                    </div> <br />
                                    <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text bg-warning text-white" id="basic-addon2"><i class="ti-pencil"></i></span>
                                        </div>
                                        <input id="password" type="text" class="form-control form-control-lg" placeholder="Password" aria-label="Password" aria-describedby="basic-addon1" required="">
                                    </div>
                                </div>
                            </div><br />
                            <hr />
                            <div class="row   border-secondary">
                                <div class="col-12">
                                    <div class="form-group">
                                        <div class="p-t-20">
                                            @*<button class="btn btn-warning" id="to-recover" type="button"><i class="fa fa-lock m-r-5"></i> Lost password?</button>*@
                                            <button class="btn btn-warning float-right" type="button" id="btnLogin"><i class="fa fa-key m-r-5"></i>  Login</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>

        <div class="col-sm-6 login-half-bg">
        </div>
    </div>

</body>

