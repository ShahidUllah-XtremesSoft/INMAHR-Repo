                                                <div class="col-md-12">
                                                    <div class="card-footer" id="btnAreaShowHideOnConditionBase">
                                                        <div class="row">
                                                            <div class="col-md-12">
                                                                <button type="button" id="btn-save-task" class="btn btn-success  pull-right" value="Save"><i class="fa fa-save"></i> @Resources.Global.btnSave</button>
