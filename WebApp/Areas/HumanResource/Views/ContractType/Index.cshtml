<form id="frmContractTypeDetail" name="frmContractTypeDetail" action="/services/Xtreme/multipart" method="post">
    <div class="card">
        <div class="card-block">

            <!--type is required should be same as command name-->
            <input type="hidden" name="type" id="type" value="HR_ContractType_Save" />
            <input type="hidden" name="Id" id="Id" value="0" />
            <input type="hidden" name="CreateBy" id="CreatedBy" value="0" />
            <input type="hidden" name="Language" id="Language" value="" />

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="col-form-label">@HRModuleUI.HumanResourceUI.lblNameEng  <span style="color:red">*</span></label>
                        <input class="form-control" id="NameEng" name="NameEng" placeholder="Enter Contract Type" required />
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label class="col-form-label">@HRModuleUI.HumanResourceUI.lblNameArb  <span style="color:red">*</span></label>
                        <input class="form-control" id="NameArb" name="NameArb" placeholder="Enter Contract Type" required />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <button type="button" id="btnSave" class="btn btn-success  pull-right"><i class="fa fa-save"></i> @Resources.Global.btnSave</button>
                </div>
            </div>
            <div class="grid-main-div">
                <div class="row">
                    <div class="col-md-12">
                        <div id="contractType-grid"></div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</form>

